{
  "compilerOptions": {
    "target": "ES2021",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}